<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6072"
    tools:context=".signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Get Started!"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account to Get UC"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:padding="1dp"
            android:layout_gravity="center"/>
             </LinearLayout>


        <EditText
            android:id="@+id/usernameSignupEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext"
            android:hint="Username"
            android:padding="16dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawableStart="@drawable/ic_mobilenumber"
            android:layout_marginTop="30dp"
            android:drawablePadding="19dp"
            android:drawableLeft="@drawable/ic_mobilenumber" />

       <EditText
           android:id="@+id/emailSignupEt"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:padding="16dp"
           android:textSize="14dp"
           android:background="@drawable/edittext"
           android:hint="Email"
           android:textColor="@color/white"
           android:layout_marginTop="18dp"
           android:drawableStart="@drawable/ic_emailvector"
           android:textColorHint="@color/white"
           android:drawablePadding="19dp"
           />

        <EditText
            android:id="@+id/passwordSignupEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext"
            android:padding="16dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:drawablePadding="19dp"
            android:drawableStart="@drawable/ic_cpasswordvector"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_cpasswordvector" />

        <EditText
            android:id="@+id/confirmPassSignupEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext"
            android:padding="16dp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:hint="Confirm Password"
            android:drawablePadding="19dp"
            android:drawableStart="@drawable/ic_cpasswordvector"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_cpasswordvector" />

        <EditText
          android:id="@+id/gameIdSignUp"
            android:hint="Game ID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:padding="16dp"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_game_id"
            android:layout_marginTop="18dp"
            android:drawableLeft="@drawable/ic_game_id"
            android:drawablePadding="19dp"
            />

        <EditText
            android:id="@+id/gameUserNameSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Game Username"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:padding="16dp"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_gameusername"
            android:layout_marginTop="18dp"
            android:drawableLeft="@drawable/ic_gameusername"
            android:drawablePadding="19dp"
            />

        <EditText
            android:id="@+id/mobileNumberSignupEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mobile Number"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:padding="16dp"
            android:inputType="number"
            android:maxLength="10"
            android:digits="1234567890"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_usernamevector"
            android:layout_marginTop="18dp"
            android:drawableLeft="@drawable/ic_usernamevector"
            android:drawablePadding="19dp"/>


        <Button
            android:id="@+id/signup_btn"
            android:layout_width="164dp"
            android:layout_height="41dp"
            android:text="Signup"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ff6072"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            >

            <TextView
                android:id="@+id/loginTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Already have an account? "/>

            <TextView
                android:id="@+id/loginTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e8c255"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Login here"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>