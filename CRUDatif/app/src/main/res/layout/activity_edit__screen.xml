<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trial.of.Camera_Assignmt.Edit_Screen">

    <ImageView
        android:id="@+id/edit_ImagePrv"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="48dp"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_Crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Crop"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_ImagePrv"
        tools:layout_editor_absoluteX="217dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/edit_Undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Undo"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_Rotate"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ImagePrv" />

    <Button
        android:id="@+id/edit_Save_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Save"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ImagePrv" />

    <Button
        android:id="@+id/edit_Rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Rotate"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_Crop"
        app:layout_constraintTop_toBottomOf="@+id/edit_ImagePrv" />

</androidx.constraintlayout.widget.ConstraintLayout>
