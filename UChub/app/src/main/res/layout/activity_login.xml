<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/homehub"
    tools:context=".loginAct">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >


        <EditText
            android:id="@+id/email_edt_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawableStart="@drawable/ic_emailvector"
            android:hint="Enter Your Email"
            android:drawableLeft="@drawable/ic_emailvector"
            android:drawablePadding="19dp"
            />

        <EditText
            android:id="@+id/pass_edt_text"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/white"
            android:hint="Enter Your Password"
            android:textColorHint="#e0e0e0"
            android:background="@drawable/edittext"
            android:padding="16dp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_loginpasswordvector"
            android:inputType="textPassword"
            android:drawablePadding="19dp"
            android:drawableLeft="@drawable/ic_cpasswordvector"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/reset_pass_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:clickable="true"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlCompat" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="164dp"
            android:layout_height="41dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ff6072"
            android:layout_gravity="center"
            android:text="Login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/signuptv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Don't have an account? "/>

            <TextView
                android:id="@+id/signtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e8c255"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="SignUp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>