<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time"
                android:layout_weight="1"
                android:textColor="#fff"
                android:paddingTop="8dp"
                android:paddingLeft="19dp"
                android:background="@drawable/edittexttime"
                android:backgroundTint="#ff6072"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="SOLO"
                android:background="@drawable/edittexthead"
                android:gravity="center_horizontal|center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:backgroundTint="#ff6072"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rules"
                android:textColor="#fff"
                android:gravity="right"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingRight="19dp"
                android:background="@drawable/edittextrule"
                android:backgroundTint="#ff6072"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/tourSoloIv"
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/tournamentsolocrop"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="350dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tourSoloIv"/>

        <Button
            android:id="@+id/JoinNowBtn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/buttontournament"
            android:layout_below="@+id/progressBar1"
            android:text="Join Now"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:layout_marginTop="320dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time"
                android:layout_weight="1"
                android:textColor="#fff"
                android:paddingTop="8dp"
                android:paddingLeft="19dp"
                android:background="@drawable/edittexttime"
                android:backgroundTint="#ff6072"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="DUO"
                android:background="@drawable/edittexthead"
                android:gravity="center_horizontal|center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:backgroundTint="#ff6072"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rules"
                android:textColor="#fff"
                android:gravity="right"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingRight="19dp"
                android:background="@drawable/edittextrule"
                android:backgroundTint="#ff6072"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/tourSoloIv2"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_height="215dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/JoinNowBtn"
            android:src="@drawable/tournamentduocrop"
            />

        <Button
            android:id="@+id/JoinNowBtn2"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/buttontournament"
            android:layout_below="@+id/tourSoloIv2"
            android:text="Join Now"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:layout_marginTop="630dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time"
                android:layout_weight="1"
                android:textColor="#fff"
                android:paddingTop="8dp"
                android:paddingLeft="19dp"
                android:background="@drawable/edittexttime"
                android:backgroundTint="#ff6072"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="SQUAD"
                android:background="@drawable/edittexthead"
                android:gravity="center_horizontal|center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:backgroundTint="#ff6072"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rules"
                android:textColor="#fff"
                android:gravity="right"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingRight="19dp"
                android:background="@drawable/edittextrule"
                android:backgroundTint="#ff6072"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/tourSoloIv3"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="215dp"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/JoinNowBtn2"
            android:src="@drawable/tournamentsquadcrop"
            android:scaleType="centerCrop"
            />

        <Button
            android:id="@+id/JoinNowBtn3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/buttontournament"
            android:layout_below="@+id/tourSoloIv3"
            android:text="Join Now"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>


</ScrollView>