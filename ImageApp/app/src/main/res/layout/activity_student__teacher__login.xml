<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Teacher_Login">


    <TextView
        android:text=" Log In"
        android:textStyle="bold"
        android:textColor="#407BFF"
        android:textSize="49dp"
        android:layout_marginTop="35dp"
        android:textAllCaps="true"

        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/Teacher_Login"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tlogin"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="350dp"/>




    <Button
        android:id="@+id/Student_Login"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stulogin"
        android:layout_width="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_height="350dp"/>

</LinearLayout>